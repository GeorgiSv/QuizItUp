@using QuizItUp.Common

@{
    this.ViewData["Title"] = "Quiz Area";
}

@await Html.PartialAsync("_MainHeaderPartial", ViewData["Title"])
<div class="container">
    <div class="row row-cols-1 row-cols-md-2">
        <div class="col mb-4 text-center">
            <div class="card">
                <a asp-area="" asp-controller="Quizes" asp-action="Create">
                    <img src="https://image.freepik.com/free-vector/quiz-neon-sign_1262-19629.jpg" class="card-img-top" alt="Create Quiz">
                </a>
                <div class="card-body">
                    <h5 class="card-title">Create Quiz</h5>
                    <p class="card-text">Start creating your quiz and challenge other players.</p>
                </div>
            </div>
        </div>
        <div class="col mb-4 text-center">
            <div class="card">
                <a asp-area="" asp-controller="Quizes" asp-action="All">
                    <img src="https://res.cloudinary.com/dlely3oct/image/upload/v1606170831/pics/allQuiz1_pb9zk3.png" class="card-img-top" alt="All Quizes">
                </a>
                <div class="card-body">
                    <h5 class="card-title">Check all quizes</h5>
                    <p class="card-text">Check all quizes users have created and beat theirs score.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3 text-center" >
        <img src="https://res.cloudinary.com/dlely3oct/image/upload/v1608220986/pics/LiveQuizesComingSoon_ex7mts.png" class="card-img-top" alt="...">
        <div class="card-body">
            <p class="card-text">The time for live challenges is close..</p>
            @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
        </div>
    </div>
</div>